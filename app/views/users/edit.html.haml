.AccountPage
  .AccountBox
    %h2.AccountBox__title ユーザー編集
    = form_for(current_user) do |f|
      .AccountContent
        .Form-field
          .Form-field__label--normal
            = f.label :name
            %br/
          .Form-field__input--normal
            = f.text_field :name, autofocus: true, autocomplete: "name"
        .Form-field
          .Form-field__label--normal
            = f.label :email
            %br/
          .Form-field__input--normal
            = f.email_field :email, autofocus: true, autocomplete: "email"
        = f.submit "Update", class: "update-btn"
      .Formbtn-field
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "form-btn"
        = link_to "トップページへ戻る", root_path, class: "form-btn"
