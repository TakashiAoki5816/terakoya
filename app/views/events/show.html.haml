.wrapper
  .Main-Contents
    .Event-Info
      .Event-Info__header
        .imagebox
          -if @event.image?
            = image_tag @event.image.url, :size =>'500x250'
        .Eventjoin-box
          .Eventjoin-box__date
            = @event.datetime.strftime("%Y年%m月%d日")
          .Eventjoin-box__form
            = link_to "勉強会を申し込む", new_event_ticket_path(current_user)
      .Event-Info__titlebox
        .title-info
          タイトル：
        .title
          = @event.title
      .Event-Info__contentbox
        .content-Info
          勉強会内容：
        .content
          = @event.content