.container
  .row
    .col-sm-9.col-md-7.col-lg-5.mx-auto
      .card.card-signin.my-5
        .card-body
          %h2.card-title.text-center ログイン
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-group
              = f.label :name
              %br/
              = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"
            .form-group
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
            .form-group
              = f.label :password
              %br/
              = f.password_field :password, autocomplete: "current-password", class: "form-control"
            - if devise_mapping.rememberable?
              .custom-control.custom-checkbox.mb-3
                = f.check_box :remember_me, class: "custom-control-input"
                = f.label :remember_me, class: "custom-control-label"
            .form-group
              = f.submit "ログイン", class: "btn btn-primary btn-block"
            = render "devise/shared/links"
