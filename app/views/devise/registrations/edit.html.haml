.card.col-sm-6.mx-auto.mt-5
  .card-body
    %h2.text-center.mt-1.mb-4
      アカウント編集
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group
        = f.label :name, class: "form-label"
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"
      .form-group
        = f.label :email, class: "form-label"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .from-group
        = f.label :password, class: "form-label"
        %i (空欄のままなら変更しません)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "form-control"
        - if @minimum_password_length
          %br/
          %em
      .form-group
        = f.label :password_confirmation, class: "form-label"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
      .form-group
        = f.label :current_password, class: "form-label"
        %i
        %br/
        = f.password_field :current_password, autocomplete: "current-password", class: "form-control"
      .actions
        = f.submit "更新", class: "btn btn-primary btn-block"
    %hr.devise-link.my-5
    .form-group
      = link_to "トップページ", root_path, class: "btn btn-info btn-block mb-4"
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-secondary btn-block mb-4"
      = link_to t('.cancel_my_account'), registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete, class: 'btn btn-danger btn-block'